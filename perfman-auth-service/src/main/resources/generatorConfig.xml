<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="MySQLTables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/perfman?useInformationSchema=true"
                        userId="root"
                        password="Test123456"/>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.code4faster.perfmanauthservice.model" targetProject="src/main/java">
            <property name="useActualColumnNames" value="true"/>
        </javaModelGenerator>
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.code4faster.perfmanauthservice.mapper" targetProject="src/main/java"/>

        <table schema="perfman" tableName="user" domainObjectName="User"/>
        <table schema="perfman" tableName="roles" domainObjectName="Role"/>
        <table schema="perfman" tableName="permissions" domainObjectName="Permission"/>
        <table schema="perfman" tableName="user_roles" domainObjectName="UserRole"/>
        <table schema="perfman" tableName="role_permissions" domainObjectName="RolePermission"/>
        <table schema="perfman" tableName="user_tokens" domainObjectName="UserToken"/>
    </context>
</generatorConfiguration>
